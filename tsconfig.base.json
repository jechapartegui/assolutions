{
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2022",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@shared/*": ["libs/shared/*"],
      "@shared/compte": ["libs/shared/compte/src/index.ts"]
    }
  }
}
